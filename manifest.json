{
  "name": "Leet Daily",
  "version": "1.0.0",
  "description": "Daily Leet code before any entertainment",
  "manifest_version": 3,
  "author": "Tipu Sultan Eiko",
  "action":{
    "default_popup": "index.html",
    "default_title": "Leet Daily"
  },
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/cookie_handler.js"],
      "exclude_matches": [
        "*://*.leetcode.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "cookies",
    "history",
    "webNavigation",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*/*"
  ]
}